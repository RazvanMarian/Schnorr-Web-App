@page "/"
@inject NavigationManager _navigationManager
@inject ISnackbar _snackbar
@attribute [Authorize]

<style>
    .explore-card:hover {
        background-color: #454d55;
        transition: all .2s ease-in;
    }
    
    .explore-card
    {
        background-color: #27272f;
    }
</style>

<AuthorizeView>
    <Authorized>
        <MudText Style="margin-bottom: 2rem" Typo="Typo.h3" Align="Align.Center">Welcome!</MudText>
        <MudGrid Spacing="2" Justify="Justify.Center">
            <MudItem Style="padding-right: 2rem">
                <HomePageOption Text="Sign a document" ImageSrc="images/sign_image.png" Path="Sign-Document"/>
            </MudItem>
            <MudItem Style="padding-right: 2rem">
                <HomePageOption Text="Verify a document" ImageSrc="images/verify_image.png" Path="Verify-Document"/>
            </MudItem>
            <MudItem Style="padding-right: 2rem">
                <HomePageOption Text="See your history" ImageSrc="images/history_image.png" Path="Activity"/>
            </MudItem>
            <MudItem Style="padding-right: 2rem">
                <HomePageOption Text="Generate a key" ImageSrc="images/SignImage.jpeg" Path="Generate-Key"/>
            </MudItem>
            <MudItem Style="padding-right: 2rem">
                <HomePageOption Text="Manage your keys" ImageSrc="images/SignImage.jpeg" Path="User-Keys"/>
            </MudItem>
            
        </MudGrid>
    </Authorized>
</AuthorizeView>


